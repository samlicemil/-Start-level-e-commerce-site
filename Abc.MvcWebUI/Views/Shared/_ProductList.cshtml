@using Abc.MvcWebUI.Models;
@model IEnumerable<ProductModel>


@if (Model.Count()>0)
{
<div class="alert alert-primary" role="alert">
    <i class="fas fa-check-square"></i>
    @Model.Count() Products are available.
</div>
}
else
{
 <div class="alert alert-warning" role="alert">
     <i class="fa fa-exclamation-circle"></i>
     Products are not found.
 </div>
}

<div class="row">
    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3 ">
            <div class="card">
                <img class="card-img-top image-height" src="~/Upload/@urun.Image" alt="@urun.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id"> @urun.Name</a>


                    </h5>
                    <p class="card-text pt-2 description">
                        @urun.Description
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        <i class="fas fa-lira-sign"></i>
                        @urun.Price

                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-outline-info btn-sm float-right">
                        Ürünü İncele
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </div>
            </div>
        </div>

    }
</div>

