@model IEnumerable<Abc.MvcWebUI.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5" style="background-color: azure">
    <div class="row">
        <div class="col-md-12">
            <h2>Your order information</h2>
            <hr />
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                        <th>
                            <i class="fas fa-lira-sign"></i>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th>@Html.DisplayNameFor(model=>model.OrderState)</th>
                        <th>Details</th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                { 
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>
                            <i class="fas fa-lira-sign"></i>
                            @item.Total
                        </td>
                        <td>@item.OrderState</td>
                        <td>
                            @Html.ActionLink("Details","Details",new {id=@item.Id}, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>

                }
                </tbody>


            </table>

        </div>
    </div>





</div>
